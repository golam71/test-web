  <script>
    //dont delete
    import anime from "animejs";
    // Don't forget to use the polyfill for forEach! :)
    function startCounter() {
      document.querySelectorAll(".number-animate").forEach((element) => {
        const { endValue } = element.dataset;
        const incrementValue = element.dataset.increment;
        const durationValue = element.dataset.duration;

        if (endValue) {
          numberAnimation(element, endValue, incrementValue, durationValue);
        }
      });

      // @ts-ignore
      function numberAnimation(element, endValue, incrementor, duration) {
        anime({
          targets: element,
          textContent: endValue,
          round: incrementor ? 1 / incrementor : 1 / 5,
          easing: "easeInOutQuad",
          duration: duration || 4000,
        });
      }
    }

    const intersectionObserver = new IntersectionObserver((entries) => {
      // If intersectionRatio is 0, the target is out of view
      // and we do not need to do anything.
      if (entries[0].intersectionRatio <= 0) {
        return;
      }

      startCounter(); // when the div is visible start the stats counter
      intersectionObserver.unobserve(document.querySelector("#stats"));
    });

    // start observing
    intersectionObserver.observe(document.querySelector("#stats"));
  </script>
