<Layout title="Salam App Team">
  <section class="text-white body-font sm:px-10">
    <div class="flex justify-center">
      <div class="my-2 flex justify-around space-x-2 p-2 w-full sm:w-4/6">
        <button
          id="All"
          class="p-1 hover:text-aquamarine font-semibold underline-offset-4"
          onclick="showDevelopers('All')"
                    >ALL
        </button>
        <div>/</div>
        <button
          id="App"
          class="p-1 hover:text-aquamarine font-semibold underline-offset-4"
          onclick="showDevelopers('App')"
                    >APP
        </button>
        <div>/</div>
        <button
          id="Web"
          class="p-1 hover:text-aquamarine font-semibold underline-offset-4"
          onclick="showDevelopers('Web')"
                    >WEB
        </button>
        <div>/</div>
        <button
          id="UI"
          class="p-1 hover:text-aquamarine font-semibold underline-offset-4"
          onclick="showDevelopers('UI')"
                    >DESIGN
        </button>
        <div>/</div>
        <button
          id="Writer"
          class="p-1 hover:text-aquamarine font-semibold underline-offset-4"
          onclick="showDevelopers('Writer')"
                    >TEXT
        </button>
      </div>
    </div>

    <div class="flex flex-wrap justify-center m-4 p-5">
      {
        developers.map((developer) => (
          <div
            position={developer.position}
            id="developer-card"
            class="p-4 lg:w-1/4 md:w-1/2"
            aria-label={developer.name}
          >
            <div class="h-full flex flex-col items-center text-center">
              <img
                src={developer.image}
                class="mx-auto h-40 w-40 rounded-full xl:w-56 xl:h-56"
                alt={`${developer.name}'s profile picture`}
              />
              <div class="w-full mt-10">
                <h2 class="title-font font-medium text-lg text-white">
                  {developer.name}
                </h2>

                <div
                  class={`flex w-${
                    developer.flags.length === 2
                      ? "[70px] flex justify-center"
                      : "[35px]"
                  } mx-auto `}
                  aria-label="Developer's flags"
                >
                  {developer.flags.map((flag) => (
                    <img
                      src={flag.src}
                      class="h-[25px] w-[35px] mx-1 m-2"
                      alt={flag.alt}
                    />
                  ))}
                </div>

                <h3 class="text-gray-400 mb-3">{developer.position}</h3>
                <p class="mb-4">{developer.bio}</p>
                <span class="inline-flex">
                  {developer.links.map((link) => (
                    <a
                      key={Object.values(link)[0]}
                      class="text-white p-3"
                      target="_blank"
                      href={Object.values(link)[0]}
                      aria-label={`Link to ${Object.keys(link)[0]}`}
                    >
                      {Object.keys(link)[0] === "github" ? (
                        <CiGithub alt="GitHub logo" class="w-6 h-6" />
                      ) : Object.keys(link)[0] === "discord" ? (
                        <CiDiscord alt="Discord logo" class="w-6 h-6" />
                      ) : Object.keys(link)[0] === "website" ? (
                        <CiWebsite alt="Website logo" class="w-6 h-6" />
                      ) : Object.keys(link)[0] === "mail" ? (
                        <CiMail alt="Website logo" class="w-6 h-6" />
                      ) : null}
                    </a>
                  ))}
                </span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <style>
    html {
      scroll-behavior: smooth;
      /* overflow-x: hidden; */
    }
  </style>

  <script is:inline>
    const array = ["All", "App", "Web", "UI", "Writer"];

    function underline(position) {
      array.forEach((element) => {
        const selectedElement = document.getElementById(element);
        selectedElement.classList.remove("underline");
        selectedElement.classList.remove("text-aquamarine");
      });
      const selectedElement = document.getElementById(position);
      selectedElement.classList.add("underline");
      selectedElement.classList.add("text-aquamarine");
    }

    function showDevelopers(position) {
      underline(position);

      const cards = document.querySelectorAll("#developer-card");

      cards.forEach((card) => {
        const cardPosition = card.getAttribute("position");

        card.style.display =
          position === "All" ||
          (cardPosition && cardPosition.includes(position))
            ? "block"
            : "none";
      });
    }

    showDevelopers("All");
  </script>
</Layout>
